{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "mangoRestaurantKvName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "[subscription().tenantId]"
    },
    "adUserId": {
      "type": "string"
    },
    "productDbConnectionStringName": {
      "type": "string",
      "defaultValue": "ProductDbConnectionDev"
    },
    "productDbConnectionStringValue": {
      "type": "securestring"
    }
  },
  "variables": {
    "vaultUri": "[format('https://{0}.vault.azure.net/', parameters('mangoRestaurantKvName'))]"
  },
  "resources": [
      {
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2022-07-01",
        "name": "[parameters('mangoRestaurantKvName')]",
        "location": "[parameters('location')]",
        "properties": {
            "sku": {
                "family": "A",
                "name": "Standard"
            },
            "tenantId": "[parameters('tenantId')]",
            "enabledForDeployment": false,
            "enabledForDiskEncryption": false,
            "enabledForTemplateDeployment": true,
            "enableSoftDelete": true,
            "softDeleteRetentionInDays": 90,
            "enableRbacAuthorization": true,
            "vaultUri": "[variables('vaultUri')]",
            "provisioningState": "Succeeded",
            "publicNetworkAccess": "Enabled",
            "accessPolicies": [
            {
              "objectId": "[parameters('adUserId')]",
              "tenantId": "[parameters('tenantId')]",
              "permissions": {
                "keys": [
                  "Get",
                  "List",
                  "Update",
                  "Create",
                  "Import",
                  "Delete",
                  "Recover",
                  "Backup",
                  "Restore"
                ],
                "secrets": [
                  "Get",
                  "List",
                  "Set",
                  "Delete",
                  "Recover",
                  "Backup",
                  "Restore"
                ],
                "certificates": [
                  "Get",
                  "List",
                  "Update",
                  "Create",
                  "Import",
                  "Delete",
                  "Recover",
                  "Backup",
                  "Restore",
                  "ManageContacts",
                  "ManageIssuers",
                  "GetIssuers",
                  "ListIssuers",
                  "SetIssuers",
                  "DeleteIssuers"
                ]
              }
            }
            ]
        }
      },
      {
        "type": "Microsoft.KeyVault/vaults/secrets",
        "apiVersion": "2022-07-01",
        "name": "[concat(parameters('mangoRestaurantKvName'), '/', parameters('productDbConnectionStringName'))]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults', parameters('mangoRestaurantKvName'))]"
        ],
        "properties": {
          "contentType": "securestring",
          "value": "[parameters('productDbConnectionStringValue')]",
          "attributes": {
              "enabled": true
          }
        }
      }
  ],
  "outputs": {
    "keyVaultId": {
      "type": "string",
      "value": "[resourceId('Microsoft.KeyVault/vaults', parameters('mangoRestaurantKvName'))]"
    }
  }
}