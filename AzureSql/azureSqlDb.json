{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sqlDBFullName": {
      "type": "string"
    },
    "sqlDBName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "tags": {
      "type": "object"
    },
    "administratorLogin": {
      "type": "string"
    },
    "administratorLoginPassword": {
      "type": "secureString"
    },
    "productApiDbServerName": {
      "type": "string"
    },
    "serverConnection": {
      "type": "string"
    }
  },
 "functions": [
  {
    "namespace": "calculations",
    "members": {
      "removeSingleQuotes": {
        "parameters": [
          {
            "name": "originalString",
            "type": "string"
          }
        ],
        "output": {
          "type": "string",
          "value": "[if(and(equals(first(parameters('originalString')),''''), equals(last(parameters('originalString')),'''')), substring(parameters('originalString'), 1, sub(length(parameters('originalString')), 2)), parameters('originalString'))]"
        }
      }
    }
  }
],
  "variables": {
    "serverConnectionWithoutSingleQuotes": "[calculations.removeSingleQuotes(parameters('serverConnection'))]",
    "serverConnectionWithoutSingleQuotesWithoutTcp": "[substring(variables('serverConnectionWithoutSingleQuotes'), add(indexOf(variables('serverConnectionWithoutSingleQuotes'), 'tcp'), 1), length(variables('serverConnectionWithoutSingleQuotes')))]"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2022-05-01-preview",
      "name": "[parameters('sqlDBFullName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Basic",
        "tier": "Basic",
        "capacity": 5
      },
      "kind": "v12.0,user",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 1073741824,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false,
        "readScale": "Disabled",
        "requestedBackupStorageRedundancy": "Local",
        "isLedgerOn": false,
        "availabilityZone": "NoPreference"
      },
      "tags": "[parameters('tags')]"
    }
  ],
  "outputs": {
    "connectionString": {
      "type": "string",
      "value": "[concat(variables('serverConnectionWithoutSingleQuotes'), 'Initial Catalog=', parameters('sqlDBName'), ';')]"
    },
    "connectionStringForPipeline": {
      "type": "string",
      "value": "[concat(variables('serverConnectionWithoutSingleQuotesWithoutTcp'), 'Initial Catalog=', parameters('sqlDBName'), ';')]"
    }
  }
}