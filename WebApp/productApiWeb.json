{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverfarmsMangoPlanName": {
      "type": "string"
    },
    "sitesMangoProductApiDevName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "productIdentity": {
      "type": "string"
    },
    "tags": {
      "type": "object"
    },
    "appConfigConnectionString": {
      "type": "string"
    },
    "environment": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2022-03-01",
      "name": "[parameters('sitesMangoProductApiDevName')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('location')]",
      "kind":"app",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[parameters('productIdentity')]": {}
        }
      },
      "properties": {
        "siteConfig": {
          "netFrameworkVersion": "v7.0",
          "alwaysOn": false
        },
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', parameters('serverfarmsMangoPlanName'))]",
        "clientAffinityEnabled": true
      },
      "tags": "[parameters('tags')]"
    },
    {
      "apiVersion": "2022-03-01",
      "name": "[concat(parameters('sitesMangoProductApiDevName'), '/connectionstrings')]",
      "type": "Microsoft.Web/sites/config",
      "location": "[resourceGroup().location]",
      "dependsOn": [
          "[resourceId('Microsoft.Web/Sites', parameters('sitesMangoProductApiDevName'))]"
      ],
      "properties": {
        "AppConfigConnectionString": {
          "value": "[parameters('appConfigConnectionString')]",
          "type": "Custom"
        }
      }
    },
    {
      "apiVersion": "2022-03-01",
      "name": "[concat(parameters('sitesMangoProductApiDevName'), '/appsettings')]",
      "type": "Microsoft.Web/sites/config",
      "location": "[resourceGroup().location]",
      "dependsOn": [
          "[resourceId('Microsoft.Web/Sites', parameters('sitesMangoProductApiDevName'))]"
      ],
      "properties": {
        "ASPNETCORE_ENVIRONMENT": "[parameters('environment')]"
      }
    }
  ]
}
