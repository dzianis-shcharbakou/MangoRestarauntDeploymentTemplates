{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
        "serverfarmsMangoPlanName": {
            "defaultValue": "mango-plan",
            "type": "String"
        },
        "sitesMangoProductApiDevName": {
            "defaultValue": "mango-ProductApi-dev",
            "type": "String"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The storage account location."
            }
        }
  },
  "variables": {
  },
  "resources": [
    {
      "apiVersion": "2022-03-01",
      "name": "[parameters('sitesMangoProductApiDevName')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('location')]",
      "kind":"app",
      "tags": {
        "env": "dev",
        "app": "productApi"
      },
      "properties": {
        "siteConfig": {
          "netFrameworkVersion": "v7.0",
          "alwaysOn": false
        },
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', parameters('serverfarmsMangoPlanName'))]",
        "clientAffinityEnabled": true
      }
    }
  ]
}
